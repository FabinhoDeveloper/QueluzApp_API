generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(uuid())
  primeiroNome String
  ultimoNome String
  cpf String @unique
  telefone String 
  email String @unique
  senha String
  endereco String
  telefoneConfirmado Boolean @default(false)
}
